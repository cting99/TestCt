<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DripCircle">
		<attr name="drip" format="reference"/>
		<attr name="dripDiameter" format="reference|dimension"/>
		<attr name="iconSrc" format="reference"/>
		<attr name="iconDiameter" format="reference|dimension"/>
		<attr name="text" format="reference"/>
		<attr name="textSize" format="reference|dimension"/>
		<attr name="waveColor" format="reference|color"/>
		
	</declare-styleable>

    <declare-styleable name="OneDirection">
        <attr name="leftIcon" format="reference"/>
        <attr name="leftColor" format="color"/>
        <attr name="leftBackIcon" format="reference"/>
        <attr name="rightIcon" format="reference"/>
        <attr name="rightBackIcon" format="reference"/>
        <attr name="rightColor" format="color"/>
        <attr name="handleIcon" format="reference"/>
        <attr name="targetDimetor" format="reference"/>
        
        <attr name="pointIcon" format="reference"/>
        <attr name="pointDimetor" format="reference"/>
        <attr name="pointCount" format="integer"/>
        
        <attr name="waveAngle" format="integer"/>
        
        <attr name="animFactor" format="float"/>
    </declare-styleable>
    
    <declare-styleable name="BirdRadioContainer">
        <attr name="groupTitle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ShimmerFrameLayout">
        <attr name="auto_start" format="boolean"/>
        <attr name="base_alpha" format="float"/>
        <attr name="duration" format="integer"/>
        <attr name="repeat_count" format="integer"/>
        <attr name="repeat_delay" format="integer"/>
        <attr name="repeat_mode" format="enum">
            <enum name="restart" value="1"/>
            <enum name="reverse" value="2"/>
        </attr>
        <attr name="angle" format="enum">
            <enum name="cw_0" value="0"/>
            <enum name="cw_90" value="90"/>
            <enum name="cw_180" value="180"/>
            <enum name="cw_270" value="270"/>
        </attr>
        <attr name="dropoff" format="float"/>
        <attr name="fixed_width" format="dimension"/>
        <attr name="fixed_height" format="dimension"/>
        <attr name="intensity" format="float"/>
        <attr name="relative_width" format="float"/>
        <attr name="relative_height" format="float"/>
        <attr name="shape" format="enum">
            <enum name="linear" value="0"/>
            <enum name="radial" value="1"/>
        </attr>
        <attr name="tilt" format="float"/>
    </declare-styleable>
</resources>
